{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.luckydogs.lottery",
  "productName": "LuckyDogs",
  "artifactName": "LuckyDogs-${version}-${arch}.${ext}",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*"
  ],
  "extraResources": [
    {
      "from": "config",
      "to": "config",
      "filter": ["**/*"]
    }
  ],
  "asar": true,
  "win": {
    "target": ["nsis", "portable"],
    "icon": "resources/icon.png",
    "executableName": "LuckyDogs"
  },
  "mac": {
    "target": ["dmg", "zip"],
    "icon": "resources/icon.png",
    "category": "public.app-category.entertainment"
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "icon": "resources/icon.png",
    "category": "Game"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true
  }
}
